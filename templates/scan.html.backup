</script>


  <!-- ========================== CSS (có thể tách ra assets/app.css) ========================== -->
  <style>
    :root{ --primary:#0d47a1; --accent:#ffb300; }
    *{ box-sizing:border-box; }
    body{ margin:0; font-family:system-ui; background:#f6f7fb; color:#222; }
    header{ background:#111; color:#fff; padding:12px 16px; display:flex; align-items:center; gap:12px; }
    header h1{ margin:0; font-size:18px; font-weight:700; }

    main{ padding:16px; width:80vw; max-width:none; margin:0 auto; }

    .notice{ background:#FFFBE6; border:1px solid #FFA500; border-radius:8px; padding:10px 14px; min-height:50px; display:flex; align-items:center; justify-content:center; margin-bottom:12px; }
    .notice[data-kind="success"]{ color:#3c763d; font-weight:700; }
    .notice[data-kind="error"]{ color:#a94442; font-weight:700; }
    .notice[data-kind="warning"]{ color:#8a6d3b; font-weight:700; }


    .row{ display:flex; align-items:center; flex-wrap:wrap; gap:10px; row-gap:14px; }
    .row + .row{ margin-top:12px; } /* ↑ khoảng cách dọc giữa các khối row */
    .grow{ flex:1; }

    .tabs{ display:flex; gap:6px; margin:8px 0 14px; }
    .tab-btn{ padding:6px 10px; border:1px solid #ccc; border-radius:6px; background:#ccc; cursor:pointer; min-width:64px;}
    .tab-btn:hover {background:#e6f0ff; border-color:#ce8c06ee; color:#ce8c06ee;}
    .tab-btn.active{ background:#ffb116; color:#000409; font-weight:600;}

    .card{ background:#fff; border-radius:12px; box-shadow:0 1px 2px rgba(0,0,0,.06); padding:14px; }

    .grid{ display:grid; gap:12px;}
    .grid-2{ grid-template-columns: 1.9fr 1.1fr; }
    @media (max-width: 600px){ .grid-2{ grid-template-columns:1fr; }}

    label{ font-size:14px; color:#000000; }
    input[type="text"], input[type="number"], select{padding:8px 10px; border:1px solid #ccc; border-radius:8px; font-size:16px; min-width:120px;}
    input.big{font-size:20px; padding:10px 12px; }

    button{padding:10px 14px; border-radius:10px; background:#fffffff1; color:#001e44bb; border-color:#e77d19ee; font-weight:600; cursor:pointer;}
